extends ../layout/main

block variables
  - var title = 'Add coin';
  - var description = '';
  - var pageName = 'addCoin';
  - var pageType = 'profile';


block content
  +b.ARTICLE

    +b.SECTION
      .container
        +b.breadcrumbs 
          a(href="profile-account.html") Account 
          span / 
          span Add coin

    +b.SECTION
      .container
        +b.H3.title(class="_strong") Add coin

        +b.add-currency.block
          +b.typography
            h3 Submit new coin to <span class="color-primary">CoinReview</span>
            p Please fill out this form carefully to add a new coin to CoinReview. After submission, your coin will be visible on the New Listings page. Get 500 votes to be officially listed on CoinReview. Please fill out this form carefully to add a new coin to CoinReview. After submission, your coin will be visible on the New Listings page. 
          
          
          form
            +b.upload-photo
              +e.content
                +b.field
                  label Upload logo*
                  +b.field-group.field-file
                    +b.LABEL
                      input(type="file" value="" name="file")
                      span
                      +b.A(class="button _primary _shadow") Upload 
              +e.media
                +b.your-logo
                  +e.logo
                    +e.logo-text Your logo here
                    img(src="https://dummyimage.com/187x187/4f6aff/4f6aff", alt="")
                  img(src="assets/images/add.png", alt="")


            .row 
              .col-3 
                +b.fields-group(class="_symbol")
                  +b.field 
                    label Name*
                    input(type="text" name="name" required)
                  +b.field
                    label Symbol*
                    input(type="text" name="symbol" required placeholder="XYZC")

              .col-3
                +b.field 
                  label Network/Chain	
                  input(type="text" name="network")
           

              .col-3
                +b.field 
                  label Project in presale phase?*
                  +b.LABEL.select
                    select(name="phase" required).js-presale-select
                      option(value="no") No 
                      option(value="yes") Yes
              .col-3
                +b.field 
                  label Project in Whitelist?*
                  +b.LABEL.select
                    select(name="whitelist" required).js-whitelist-select
                      option(value="no") No 
                      option(value="yes") Yes

            // if presale
            +b.presale-block
              .row 
                .col-6 
                  +b.field(class="_date")
                    label Start time
                    +e.wrapper
                      input(type="text" name="start_time" data-timepicker="true" class="js-datepicker js-start-presale")
                .col-6
                  +b.field 
                    label Presale link <i>(dxsale.app or unicrypt.network)</i>
                    input(type="text" name="link_presale").js-link-presale
            // -

            // if whitelist
            +b.whitelist-block
              .row 
                .col-6 
                  +b.field(class="_date")
                    label Finish time
                    +e.wrapper
                      input(type="text" name="finish_time" data-timepicker="true" class="js-datepicker js-finish-whitelist")
                .col-6
                  +b.field 
                    label Whitelist link <i>(dxsale.app or unicrypt.network)</i>
                    input(type="text" name="link_whitelist").js-link-whitelist
            // -

            +b.field 
              label Contract Address*
              input(type="text" name="address" required)

            +b.field 
              label Description*
              input(type="text" name="description" required)
            
            +b.field 
              label Custom chart link (optional)
              input(type="text" name="chart_link")
            
            +b.field 
              label Custom swap link (optional)
              input(type="text" name="swap_link" required)

            +b.field 
              label Website link*
              input(type="text" name="link" required)

            +b.field(class="_date")
              label Launch Date*
              +e.wrapper
                input(type="text" name="launch_date" required class="js-datepicker")
            
            +b.field 
              label Telegram link*
              input(type="text" name="telegram" required)

            +b.field 
              label Twitter link
              input(type="text" name="twitter")

            +b.field 
              label Discord link
              input(type="text" name="discord")

            +b.field
              +b.LABEL.checkbox 
                  input(type="checkbox" name="agree")
                  span I agree to the Terms and Conditions*
            +e.bottom
              +b.BUTTON.button(class="_primary") Submit coin

block script
  script(src="assets/js/vendors.js" defer)
  script(src="assets/js/app.js" defer)