extends ../layout/main

block variables
  - var title = 'Etherium';
  - var description = '';
  - var pageName = 'home';


block content

  +b.ARTICLE
    include ../includes/partials/time-labels
    
    +b.SECTION
        .container
            +b.breadcrumbs 
                a(href="#") Coins 
                span / 
                span Etherium


    +b.SECTION.counters-section
      .container

        .swiper-container.swiper-no-swiping.js-swiper-counters
          .swiper-wrapper 
            .swiper-slide 
              +b.counters-item
                +e.top
                  p Market Capitalization
                  +b.label(class="_success") 1.2<sup>%</sup>
                +e.P.value <span>$</span> 1,448,742,239,530
            .swiper-slide 
              +b.counters-item
                +e.top
                  p 24h Trading Volume
                  +b.label(class="_danger") 0.3<sup>%</sup>
                +e.P.value <span>$</span> 90,409,965,514
            .swiper-slide 
              +b.counters-item
                +e.top
                  p Bitcoin Market Cap Dominance
                +e.P.value <span>44.63%</span>
            .swiper-slide 
              +b.counters-item
                +e.top
                  p # of Coins
                +e.P.value <span>8,626</span>

    mixin tr(index,currency, color)
      tr 
        td #{index}
        td
          if currency === 'btc'
            +b.currency
              +e.icon 
                img(src="assets/images/currency/btc.svg", alt="")
              +e.P.name Bitcoin <span>BTC</span>
          else if currency === 'eth'
            +b.currency
              +e.icon 
                img(src="assets/images/currency/eth.svg", alt="")
              +e.P.name Etherium <span>ETH</span>
          else if currency === 'dai'
            +b.currency
              +e.icon 
                img(src="assets/images/currency/dai.svg", alt="")
              +e.P.name Dai <span>DAI</span>
          else if currency === 'tether'
            +b.currency
              +e.icon 
                img(src="assets/images/currency/tether.svg", alt="")
              +e.P.name Tether <span>Tether</span>
      
        td.nowrap
          p 
            strong $34,394.55
        td.nowrap
          if currency === 'eth'
            p.color-success
              strong 1.36%
          else
            p.color-danger
              strong 0.23%
        td.nowrap
          p.color-success
            strong 7.86%
        td.nowrap
          p $646,879,798,387
        td.nowrap
          p $20,512,439,991
          p 
            small 595,070 BTC
        td.nowrap
          p 18,766,106 BTC
        td
          if currency === 'eth'
            .chart(data-array="10,41,35,51,49,62,69,91,148,10,41,35,51,49", data-color=color)
          else 
            .chart(data-array="50,62,79,91,148,41,35,51,49,62,69,91,148,10", data-color=color)
        td
          +b.amount-module 
            .decrease.value-button(value='Decrease Value') -
            input.number(type='number' value='0' name="amount")
            .increase.value-button(value='Increase Value') +
    
    mixin tr2(index)
        tr 
            td #{index}
            td 
                if index === '2'
                    +b.currency
                        +e.icon 
                            img(src="assets/images/currency/snx.svg", alt="")
                        +e.P.name Huobi Global
                else if index === '4'
                    +b.currency
                        +e.icon 
                            img(src="assets/images/currency/cpnd.svg", alt="")
                        +e.P.name Huobi Global
                else 
                    +b.currency
                        +e.icon 
                            img(src="assets/images/currency/btc.svg", alt="")
                        +e.P.name Binance
            td 
                strong ETH/USD
            td 
                strong $2,332.00
            td $6,391,773.09
            td $646,879,798,387
            td $20,512,439,991
            td 1,23%
            td
                if index === '2'
                    +b.status-label(class="_danger") Low
                else 
                    +b.status-label(class="_success") Hight
            td 867
            td Recently
    
    +b.SECTION
      .container

        +b.table-wrapper
          +e.block(class="_border")
            +e.block-content
                +b.H3.title Promoted
            +e.table
                table.table-hover 
                    thead 
                        tr 
                            th # 
                            th Name
                            th Price
                            th 24h %
                            th 7d %
                            th Market Cap
                            th Volume(24h)
                            th Circulating Supply
                            th Last 7 Days
                            th Votes
                    tbody 
                        +tr('1','btc','#03b15d')
                        +tr('2','eth','#03b15d')
                        +tr('3','dai','#d22f49')
                        +tr('4','tether','#03b15d')
                        +tr('5','btc','#d22f49')
    
    +b.SECTION
        .container
            +b.table-wrapper
                +e.block
                    +e.block-content
                        +b.H3.title Ethereum Markets

                    +e.table
                        table.table-hover 
                            thead 
                                tr 
                                    th #
                                    th Name
                                    th Pairs
                                    th Price
                                    th +2% Depth 
                                    th -2% Depth
                                    th Volume
                                    th Volume %
                                    th Confidence
                                    th Liquidity
                                    th Liquidity scores
                            tbody 
                                +tr2('1')
                                +tr2('2')
                                +tr2('3')
                                +tr2('4')
                                +tr2('5')
    
    +b.SECTION
        .container
            +b.table-wrapper
                +e.block
                    +e.block-content
                        +b.H3.title Ethereum to USD Chart
                        +b.text-and-labels
                            +b.typography
                                p ETH to USD rate for today is $2,325.42. It has a current circulating supply of 117 Million coins and a total volume exchanged of $18,499,006,317.
                            +time-labels('time-filter')
                        
                        +b.chart-module
                            +e.chart

                        +e.table
                            .table-bordered
                                table
                                    thead 
                                        tr 
                                            th 1h
                                            th 24h
                                            th 7d
                                            th 14d
                                            th 30d
                                            th 1y
                                    tbody 
                                        tr 
                                            td 
                                                p.color-success 
                                                    strong 0.3%
                                            td 
                                                p.color-success 
                                                    strong 1.8%
                                            td 
                                                p.color-success 
                                                    strong 16.1%
                                            td 
                                                p.color-success 
                                                    strong 16.4%
                                            td 
                                                p.color-success 
                                                    strong 11.4%
                                            td 
                                                p.color-success 
                                                    strong 635.2%
    
    +b.SECTION
        .container
            +b.table-wrapper
                +e.block
                    +e.block-content
                        +e.block-row
                            +b.H3.title Ethereum USD (Historical Data)
                            
                            +time-labels('time')
                        
                    +e.table
                        table 
                            thead 
                                tr 
                                    th Date
                                    th Market Cap
                                    th Volume
                                    th Open
                                    th Close
                            tbody 
                                mixin tr-history()
                                    tr 
                                        td 2021-07-29
                                        td 
                                            p
                                                strong $268,838,784,856
                                        td 
                                            p
                                                strong $23,171,592,870
                                        td $2,299.69
                                        td $2,299.69
                                +tr-history()
                                +tr-history()
                                +tr-history()
                                +tr-history()
                                +tr-history()
                                +tr-history()
                                +tr-history()
                                +tr-history()
                                +tr-history()
                                +tr-history()
                                +tr-history()
                                +tr-history()
    +b.SECTION.news-section
        .container
            mixin news-block()
                +b.A(href="#" class="news-block")
                    +e.content
                        +e.P.title Crypto Analyst Says Ethereum Following Cardano, Maps Potential Reversal Against Bitcoin
                        +e.P.date about 19 hours ago
                        +e.description
                            p A top trader is mapping out Ethereum’s path ahead, predicting that the asset will follow in Cardano’s footsteps. In a series of tweets, pseudonymous crypto trader Capo notes that Cardano (ADA) recently retraced against Bitcoin (BTC), indicating that a similar move could be in store for Ethereum
                        +e.link Read more
                    +e.image
                        img(src="assets/images/news/lg.png", alt="")
            +news-block()
            +news-block()
            +news-block()
            +e.bottom
                +b.A(href="#" class="button _primary") Show all news
