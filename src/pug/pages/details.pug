              },  
            },

            legend: {
              show: false,
            },
            dataLabels: {
              enabled: false
            },
            yaxis: {
              show: false,
            },
            tooltip: {
              enabled: false
            },
            xaxis: {  
                axisBorder:{
                  show: false
              },
                axisTicks:{
                  show: false
              },
              labels:{
                show: false
              }
            },
        

          };

          var chart = new ApexCharts(el, options);
          chart.render();
        })

        // Chart 
        var options = {
