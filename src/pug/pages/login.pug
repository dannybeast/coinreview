extends ../layout/auth

block variables
  - var title = 'Login at Coin Review';
  - var description = 'Login at Coin Review';
  - var pageName = 'login';


block content

  .container
    +b.FORM.auth-form
      +e.row
        +e.content
          +e.H1.title Login at Coin<span class="color-primary">Review</span>
          +e.description
            p Login your account at CoinReview to unlock new features.
          +e.buttons
            +b.A(href="login-telegram.html" class="button _white") Login with Telegram
          
          +e.form
            form

              +b.field(class="_error")
                label Email
                input(type="text" value="" name="email")
              
              +b.field
                label Password
                input(type="password" value="" name="password")

              +b.field
                label Capcha
                +b.captcha
                  input(type="text" value="" name="capcha")
                  img(src="assets/images/captcha.png", alt="")

              +e.bottom
                +b.BUTTON(class="button _primary _shadow") Login now

            +e.links
              a(href="forgot.html") Forgot your password?
              a(href="register.html") Registration

        +e.media
          img(src="assets/images/login.svg", alt="")
block script
  script(src="assets/js/vendors.js" defer)
  script(src="assets/js/app.js" defer)
